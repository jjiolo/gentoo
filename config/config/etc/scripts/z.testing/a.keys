[ -d "${storage}/.ssl" ] && rm -r "${storage}/.ssl"
[ -d "${storage}/.vpn" ] && rm -r "${storage}/.vpn"
############# home
for i in user nobody proxy jail irc ssh mail http p2p ; do
[ -d "${home}/${i}/.gnupg" ] && rm -r "${home}/${i}/.gnupg"
[ -d "${home}/${i}/.ssh" ] && rm -r "${home}/${i}/.ssh"
[ -d "${home}/${i}/.ssl" ] && rm -r "${home}/${i}/.ssl"
done
