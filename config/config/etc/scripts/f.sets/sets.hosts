#!/usr/bin/sh
#############
[ -f "blacklist" ] && exit 1
#############

printf "%s\n" "#############"

cat > "blacklist" << EOF

127.0.0.1 localhost local lo
192.168.0.1 lan
172.16.0.1 nat
10.0.0.1 tun

127.0.0.1 desktop
127.0.0.1 server
127.0.0.1 virtual

1.0.0.1 cloudflare-dns.com
1.1.1.1 cloudflare-dns.com

8.8.8.8 dns.google
8.8.4.4 dns.google

EOF

curl --connect-timeout 3 "https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts" | 
grep '^0.0.0.0' | 
sort -u | 
awk '{print$1" "$2}' >> blacklist

printf "%s\n" "#############"

#############

