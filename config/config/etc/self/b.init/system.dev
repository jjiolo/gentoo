ln -sf "$(findfs LABEL=bootfs 2>/dev/null || echo /dev/null)" /dev/bootfs
ln -sf "$(findfs LABEL=storage 2>/dev/null || echo /dev/null)" /dev/storage
ln -sf "$(findfs LABEL=shared 2>/dev/null || echo /dev/null)" /dev/shared
