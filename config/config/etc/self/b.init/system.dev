# proc

find /proc -type d -mindepth 1 -exec chmod 0550 {} \; 2>/dev/null
find /proc -type f -mindepth 1 -exec chmod 0440 {} \; 2>/dev/null

find /proc/self/net -type d -mindepth 1 -exec chmod 0550 {} \; 2>/dev/null
find /proc/self/net -type f -mindepth 1 -exec chmod 0440 {} \; 2>/dev/null

chown -R root:desktop /proc/meminfo /proc/stat # xorg

#############

# sys

find /sys -type d -mindepth 1 -exec chmod 0550 {} \;
find /sys -type f -mindepth 1 -exec chmod 0440 {} \;

chown -R root:desktop /sys/dev/ /sys/devices # xorg

