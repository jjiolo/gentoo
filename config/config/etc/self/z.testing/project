
umask 0022
#############
git init --bare --initial-branch project /run/git/project
git clone file:///run/git/project /run/git/working
#############
install -d -o root -g root -m 0755 /run/git ; chown -R root:root /run/git
find "/run/git" -type d -mindepth 1 -exec chmod 0755 {} \;
find "/run/git" -type f -mindepth 1 -exec chmod 0644 {} \;
#############
umask 0077

