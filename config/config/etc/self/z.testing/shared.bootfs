
#############
. usb.mount
#############

#############
install -d -o 0 -g 0 -m 0700 "${bootfs}/contacts"
cp -a "${shared}/contacts/self" "${bootfs}/contacts/${HOSTNAME}"
cp -a "${services}/ddns/private/hostname" "${bootfs}/contacts/${HOSTNAME}/private"
#############
cp -a "${bootfs}/contacts" "${shared}"
#############

#############
[ -d "${shared}/downloads/bootfs" ] && rm -rf "${shared}/downloads/bootfs"
#############
install -d -o 9091 -g 9091 -m 0755 "${shared}/downloads/bootfs"
#############
install -o 9091 -g 9091 -m 0644 "${bootfs}/EFI/boot/bootx64.efi" "${shared}/downloads/bootfs/bootx64.efi"
#############
install -o 9091 -g 9091 -m 0644 "${bootfS}/kernels/laptop" "${shared}/downloads/bootfs/laptop"
install -o 9091 -g 9091 -m 0644 "${bootfs}/kernels/desktop" "${shared}/downloads/bootfs/desktop"
install -o 9091 -g 9091 -m 0644 "${bootfs}/kernels/server" "${shared}/downloads/bootfs/server"
install -o 9091 -g 9091 -m 0644 "${bootfs}/kernels/virtual" "${shared}/downloads/bootfs/virtual"
#############
install -o 9091 -g 9091 -m 0644 "${bootfs}/images/client" "${shared}/downloads/bootfs/client"
#############

