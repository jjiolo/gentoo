table netdev interface {
 chain ilo { type filter hook ingress device lo priority 0 ; policy accept ; }
 chain olo { type filter hook egress device lo priority 0 ; policy accept ; }
}
#############
table arp filter {
 chain input { type filter hook input priority 0 ; policy accept ; }
 chain output { type filter hook output priority 0 ; policy accept ; }
}
#############
table bridge filter {
 chain prerouting { type filter hook prerouting priority 0 ; policy accept ; }
 chain input { type filter hook input priority 0 ; policy accept ; }
 chain forward { type filter hook forward priority 0 ; policy accept ; }
 chain output { type filter hook output priority 0 ; policy accept ; }
 chain postrouting { type filter hook postrouting priority 0 ; policy accept ; }
}
#############
table inet nat {
 chain prerouting { type nat hook prerouting priority 0 ; policy accept ; }
 chain input { type nat hook input priority 0 ; policy accept ; }
 chain output { type nat hook output priority 0 ; policy accept ; }
 chain postrouting { type nat hook postrouting priority 0 ; policy accept ; }
}
