table inet filter {

 chain olo {

  # client

  udp dport {51820} udp sport {51820} ct state new log flags skuid prefix "output.nat.new " accept

  udp dport {53,123} skuid {ntpd} ct state new log flags skuid prefix "output.lo.new " accept

  udp dport {53}   skuid {nobody}            ct state new log flags skuid prefix "output.lo.new " accept
  udp dport {53}   skuid {irc,ssh,mail,http} ct state new log flags skuid prefix "output.lo.new " accept
  udp dport {53}   skuid {ddns,dnsd,p2pd}    ct state new log flags skuid prefix "output.lo.new " accept
  tcp dport {9050} skuid {nobody,proxy}      ct state new log flags skuid prefix "output.lo.new " accept











  tcp dport {6667,22,25,80} skuid {ddns} ct state new log flags skuid prefix "output.lo.new " accept

  tcp dport {6667,6697}  skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept
  tcp dport {22,2222}    skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept
  tcp dport {25,465,995} skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept
  tcp dport {80,443}     skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept

  tcp dport {6667,6697}  skuid {irc}  ct state new log flags skuid prefix "output.lo.new " accept
  tcp dport {22,2222}    skuid {ssh}  ct state new log flags skuid prefix "output.lo.new " accept
  tcp dport {25,465,995} skuid {mail} ct state new log flags skuid prefix "output.lo.new " accept
  tcp dport {80,443}     skuid {http} ct state new log flags skuid prefix "output.lo.new " accept

  udp dport {53} skuid {root,250} ct state new log flags skuid prefix "output.lo.new " accept # stage3

  # icmp

  ip protocol {icmp}   log flags skuid prefix "output.lo.icmp " accept 
  ip6 nexthdr {icmpv6} log flags skuid prefix "output.lo.icmp " accept

  # drop

  ct state invalid log flags skuid prefix "output.lo.invalid " reject
                   log flags skuid prefix "output.lo.drop " reject

 }

}
