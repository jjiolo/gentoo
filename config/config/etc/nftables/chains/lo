
#
table inet filter
chain inet filter ilo
chain inet filter olo
flush chain inet filter ilo
flush chain inet filter olo
#############
table inet filter {

 chain ilo {

  # server

  udp dport {51820} ct state new log flags skuid prefix "input.lo.new " accept # vpnd

  udp dport {53}   ct state new log flags skuid prefix "input.lo.new " accept # tord dns
  tcp dport {9050} ct state new log flags skuid prefix "input.lo.new " accept # tord socks
  tcp dport {6667} ct state new log flags skuid prefix "input.lo.new " accept # ircd
  tcp dport {22}   ct state new log flags skuid prefix "input.lo.new " accept # sshd
  tcp dport {25}   ct state new log flags skuid prefix "input.lo.new " accept # maild
  tcp dport {80}   ct state new log flags skuid prefix "input.lo.new " accept # httpd

  udp dport {67} ct state new log flags skuid prefix "input.lo.new " accept # dhcpd
  udp dport {68} ct state new log flags skuid prefix "input.lo.new " accept # dhcpc
  udp dport {69} ct state new log flags skuid prefix "input.lo.new " accept # tftpd
  udp dport {123} ct state new log flags skuid prefix "input.lo.new " accept # ntpd

  udp dport {6771} ct state new log flags skuid prefix "input.lo.new " accept # p2pd multicast
  udp dport {9091} ct state new log flags skuid prefix "input.lo.new " accept # p2pd peer
  tcp dport {9091} ct state new log flags skuid prefix "input.lo.new " accept # p2pd peer

  # icmp

  ip protocol {icmp}   log flags skuid prefix "input.lo.icmp " accept # icmp
  ip6 nexthdr {icmpv6} log flags skuid prefix "input.lo.icmp " accept # icmp

  # igmp

  ip protocol {igmp} log flags skuid prefix "input.lo.igmp " accept # igmp

  # drop

  ct state invalid log flags skuid prefix "input.lo.invalid" drop
                   log flags skuid prefix "input.lo.drop " drop

 }

}
#############
table inet filter {

 chain olo {

  # client

  udp dport {51820} udp sport {51820} ct state new log flags skuid prefix "output.lo.new " accept # vpnd

  udp dport {53,123} skuid {ntpd} ct state new log flags skuid prefix "output.lo.new " accept # ntpc

  udp dport {53}   skuid {nobody}            ct state new log flags skuid prefix "output.lo.new " accept # tord dns
  udp dport {53}   skuid {irc,ssh,mail,http} ct state new log flags skuid prefix "output.lo.new " accept # tord dns
  udp dport {53}   skuid {ddns,dnsd,p2pd}    ct state new log flags skuid prefix "output.lo.new " accept # tord dns
  tcp dport {9050} skuid {nobody,proxy}      ct state new log flags skuid prefix "output.lo.new " accept # tord socks

  udp dport {67}  skuid {dhcpc} ct state new log flags skuid prefix "output.lo.new " accept # dhcpd
  udp dport {68}  skuid {dhcpd} ct state new log flags skuid prefix "output.lo.new " accept # dhcpc
  udp dport {69}  skuid {tftpd} ct state new log flags skuid prefix "output.lo.new " accept # tftpd
  udp dport {123} skuid {ntpd}  ct state new log flags skuid prefix "output.lo.new " accept # ntpd

  udp dport {6771} skuid {p2pd} ct state new log flags skuid prefix "output.lo.new " accept # p2pd multicast
  udp dport {9091} skuid {p2pd} ct state new log flags skuid prefix "output.lo.new " accept # p2pd peer
  tcp dport {9091} skuid {p2pd} ct state new log flags skuid prefix "output.lo.new " accept # p2pd peer
  tcp dport {80,443} skuid {p2pd} ct state new log flags skuid prefix "output.lo.new " accept # httpd

  tcp dport {6667,22,25,80} skuid {ddns} ct state new log flags skuid prefix "output.lo.new " accept # tor hiddenservice

  tcp dport {80} skuid {root} ct state new log flags skuid prefix "output.lo.new " accept # httpd

  udp dport {53} skuid {root,250} ct state new log flags skuid prefix "output.lo.new " accept # stage3
  tcp dport {443} skuid {root,250} ct state new log flags skuid prefix "output.lo.new " accept # stage3

  tcp dport {6667,6697}  skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept # ircd
  tcp dport {22,2222}    skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept # sshd
  tcp dport {25,465,995} skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept # maild
  tcp dport {80,443}     skuid {nobody} ct state new log flags skuid prefix "output.lo.new " accept # httpd

  tcp dport {6667,6697}  skuid {irc}  ct state new log flags skuid prefix "output.lo.new " accept # ircd
  tcp dport {22,2222}    skuid {ssh}  ct state new log flags skuid prefix "output.lo.new " accept # sshd
  tcp dport {25,465,995} skuid {mail} ct state new log flags skuid prefix "output.lo.new " accept # maild
  tcp dport {80,443}     skuid {http} ct state new log flags skuid prefix "output.lo.new " accept # httpd

  # icmp

  ip protocol {icmp}   log flags skuid prefix "output.lo.icmp " accept # icmp
  ip6 nexthdr {icmpv6} log flags skuid prefix "output.lo.icmp " accept # icmp

  # igmp

  ip protocol {igmp} log flags skuid prefix "output.lo.igmp " accept # igmp

  # drop

  ct state invalid log flags skuid prefix "output.lo.invalid " drop
                   log flags skuid prefix "output.lo.drop " drop

 }

}
