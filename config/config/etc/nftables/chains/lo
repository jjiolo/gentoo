
#
table inet filter
chain inet filter ilo
chain inet filter olo
flush chain inet filter ilo
flush chain inet filter olo
#############
table inet filter {

 chain ilo {

  # server

  udp dport {51820} udp sport {51820} ct state new log flags skuid prefix "input.lo.new " accept

  udp dport {53}   ct state new log flags skuid prefix "input.lo.new " accept
  tcp dport {9050} ct state new log flags skuid prefix "input.lo.new " accept
  tcp dport {6667} ct state new log flags skuid prefix "input.lo.new " accept
  tcp dport {22}   ct state new log flags skuid prefix "input.lo.new " accept
  tcp dport {25}   ct state new log flags skuid prefix "input.lo.new " accept
  tcp dport {80}   ct state new log flags skuid prefix "input.lo.new " accept

  udp dport {67} ct state new log flags skuid prefix "input.lo.new " accept
  udp dport {68} ct state new log flags skuid prefix "input.lo.new " accept
  udp dport {69} ct state new log flags skuid prefix "input.lo.new " accept
  udp dport {123} ct state new log flags skuid prefix "input.lo.new " accept

  udp dport {6771} ct state new log flags skuid prefix "input.lo.new " accept
  udp dport {9091} ct state new log flags skuid prefix "input.lo.new " accept
  tcp dport {9091} ct state new log flags skuid prefix "input.lo.new " accept

  # icmp

  ip protocol {icmp}   log flags skuid prefix "input.lo.icmp " accept
  ip6 nexthdr {icmpv6} log flags skuid prefix "input.lo.icmp " accept

  # drop

  ct state invalid log flags skuid prefix "input.lo.invalid" drop
                   log flags skuid prefix "input.lo.drop " drop

 }

}
