  tcp dport {9050}        skuid {user,nobody,proxy} ct state new log flags skuid prefix "output.nat.new " accept

  tcp dport {22}          skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {465,995}     skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {443}         skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {6697}        skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {18081,18089} skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept

  tcp dport {22}          skuid {ssh} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {465,995}     skuid {smtp} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {443}         skuid {http} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {6697}        skuid {irc} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {18081,18089} skuid {xmr} ct state new log flags skuid prefix "output.nat.new " accept

  # icmp

  ip protocol {icmp}   log flags skuid prefix "output.nat.icmp " accept
  ip6 nexthdr {icmpv6} log flags skuid prefix "output.nat.icmp " accept

  # drop

  ct state invalid log flags skuid prefix "output.nat.invalid " reject
