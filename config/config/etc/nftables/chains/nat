
#
table inet filter
chain inet filter inat
chain inet filter onat
flush chain inet filter inat
flush chain inet filter onat
#############
table inet filter {

 chain inat {

  # server

  udp dport {51820} udp sport {51820} ct state new log flags skuid prefix "input.nat.new " accept

  udp dport {53}   ct state new log flags skuid prefix "input.nat.new " accept
  tcp dport {9050} ct state new log flags skuid prefix "input.nat.new " accept
  tcp dport {6667} ct state new log flags skuid prefix "input.nat.new " accept
  tcp dport {22}   ct state new log flags skuid prefix "input.nat.new " accept
  tcp dport {25}   ct state new log flags skuid prefix "input.nat.new " accept
  tcp dport {80}   ct state new log flags skuid prefix "input.nat.new " accept

  udp dport {67} ct state new log flags skuid prefix "input.nat.new " accept
  udp dport {68} ct state new log flags skuid prefix "input.nat.new " accept
  udp dport {69} ct state new log flags skuid prefix "input.nat.new " accept
  udp dport {123} ct state new log flags skuid prefix "input.nat.new " accept

  udp dport {6771} ct state new log flags skuid prefix "input.nat.new " accept
  udp dport {9091} ct state new log flags skuid prefix "input.nat.new " accept
  tcp dport {9091} ct state new log flags skuid prefix "input.nat.new " accept

  # icmp

  ip protocol {icmp}   log flags skuid prefix "input.nat.icmp " accept
  ip6 nexthdr {icmpv6} log flags skuid prefix "input.nat.icmp " accept

  # drop

  ct state invalid log flags skuid prefix "input.nat.invalid " drop
                   log flags skuid prefix "input.nat.drop " drop

 }

}
#############
table inet filter {

 chain onat {

  # client

  udp dport {51820} udp sport {51820} ct state new log flags skuid prefix "output.nat.new " accept

  udp dport {53,123} skuid {ntpd} ct state new log flags skuid prefix "output.nat.new " accept

  udp dport {53}   skuid {nobody}            ct state new log flags skuid prefix "output.nat.new " accept
  udp dport {53}   skuid {irc,ssh,mail,http} ct state new log flags skuid prefix "output.nat.new " accept
  udp dport {53}   skuid {ddns,dnsd,p2pd}    ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {9050} skuid {nobody,proxy}      ct state new log flags skuid prefix "output.nat.new " accept

  udp dport {67}  skuid {dhcpc} ct state new log flags skuid prefix "output.nat.new " accept
  udp dport {68}  skuid {dhcpd} ct state new log flags skuid prefix "output.nat.new " accept
  udp dport {69}  skuid {tftpd} ct state new log flags skuid prefix "output.nat.new " accept
  udp dport {123} skuid {ntpd}  ct state new log flags skuid prefix "output.nat.new " accept

  udp dport {6771} skuid {p2pd} ct state new log flags skuid prefix "output.nat.new " accept
  udp dport {9091} skuid {p2pd} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {9091} skuid {p2pd} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {80}   skuid {p2pd} ct state new log flags skuid prefix "output.nat.new " accept

  tcp dport {80} skuid {root} ct state new log flags skuid prefix "output.nat.new " accept

  tcp dport {6667,6697}  skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {22,2222}    skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {25,465,995} skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {80,443}     skuid {nobody} ct state new log flags skuid prefix "output.nat.new " accept

  tcp dport {6667,6697}  skuid {irc}  ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {22,2222}    skuid {ssh}  ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {25,465,995} skuid {mail} ct state new log flags skuid prefix "output.nat.new " accept
  tcp dport {80,443}     skuid {http} ct state new log flags skuid prefix "output.nat.new " accept

  tcp dport {443} skuid {root,250} ct state new log flags skuid prefix "output.nat.new " accept # stage3

  # icmp

  ip protocol {icmp}   log flags skuid prefix "output.nat.icmp " accept
  ip6 nexthdr {icmpv6} log flags skuid prefix "output.nat.icmp " accept

  # drop

  ct state invalid log flags skuid prefix "output.nat.invalid " reject
                   log flags skuid prefix "output.nat.drop " reject

 }

}
