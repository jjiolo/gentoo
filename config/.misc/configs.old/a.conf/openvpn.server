
daemon openvpn
mode server
proto udp
port 1194
dev tunnel
dev-type tap
topology subnet

user vpnd
group vpnd
nice +5

cd /storage/services/vpnd
chroot /storage/services/vpnd
tmp-dir /tmp
script-security 0

persist-tun
persist-key

tls-server
tls-version-min 1.3
ca /storage/client.crt
cert /storage/service.crt
key /storage/service
dh /storage/service.dhparam
verify-client-cert require

server-bridge
client-to-client
max-clients 232
connect-freq 3 1
keepalive 10 120

writepid /storage/services/vpnd/pid
syslog openvpn
verb 3
mute 13

