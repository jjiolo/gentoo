
daemon openvpn
mode p2p
proto udp
client
port 1194
dev tunnel
dev-type tap
topology subnet

user vpnc
group vpnc
nice +5

cd /storage/services/vpnc
chroot /storage/services/vpnc
tmp-dir /tmp
script-security 0

persist-tun
persist-key

tls-client
tls-version-min 1.3
ca /storage/server.crt
cert /storage/token.crt
key /storage/token

remote server.localdomain 1194
remote-random
connect-timeout 13
connect-retry 5 300
connect-retry-max infinite
resolv-retry infinite
keepalive 10 120

writepid /storage/services/vpnc/pid
syslog openvpn
verb 3
mute 13

