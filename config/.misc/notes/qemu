 CONFIG_VIRTIO_INPUT - 
 -device virtio-keyboard
 -device virtio-mouse
 -device virtio-tablet
 ^ qemu-system-x86_64 -device help | grep virtio

 CONFIG_SERIAL_8250 - enables /dev/ttyS{0-3}
 CONFIG_SERIAL_8250_CONSOLE - console=ttyS0

 qemu -serial stdio (-nographic)
 ^ ctrl-a + h to switch between console and monitor

