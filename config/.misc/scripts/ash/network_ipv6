
#############
printf "%s\n" "#############"
printf "%s\n" "[interfaces]"
printf "%s\n" "#############"
#############

for i in /sys/class/net/*

do

basename="$(basename $i)"

read accept_ra < "/proc/sys/net/ipv6/conf/${basename}/accept_ra"

printf "%s%s\n" "${basename}: " "${accept_ra}"

done

#############
printf "%s\n" "#############"
#############

