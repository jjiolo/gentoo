
#############
[ -z "${1}" ] && { printf "%s\n" "takes size" ; exit 1 ; }
#############
memory="$(awk '/MemTotal:/{print$2}' /proc/meminfo)" one="$((${memory}/100))"
#############
size="$((${one}*${1}))"
#############
block="$((${size}/27))"
#############
printf "%s\n" "total: ${size}"
#############
printf "%s\n" "per_user: ${block}k"
#############

#############
# max processes * max files ?
#############
printf "%s\n" "inode: $((${memory}/4))"
#############

